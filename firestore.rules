rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isMatchParticipant(matchData) {
      return isSignedIn() && (
        matchData.userId1 == request.auth.uid ||
        matchData.userId2 == request.auth.uid
      );
    }

    // User profiles - authenticated users can read any profile (needed to see others at venues)
    // Only the owner can write their own document
    // Enforce bio (min 10 chars) and photos (at least 1) for profile updates
    match /users/{uid} {
      // CRITICAL: Allow any authenticated user to read profiles
      // This is needed for:
      // - Seeing other users at venues
      // - Loading partner info in chat/matches
      // - Displaying user cards
      allow read: if isSignedIn();
      
      allow create: if isSelf(uid);
      
      // Update: validate bio and photos if they're being updated
      // Allow updates during onboarding when document might not exist yet
      allow update: if isSelf(uid) && (
        // If document doesn't exist yet (initial creation via setDoc with merge), allow update
        !exists(/databases/$(database)/documents/users/$(uid)) ||
        // If bio/photos aren't being changed, allow update
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['bio', 'photos']) ||
        // If bio/photos are being changed, validate them
        (
          // Bio validation: if bio field exists and is a string, it must be at least 10 chars
          (!('bio' in request.resource.data) || 
           !(request.resource.data.bio is string) || 
           request.resource.data.bio.size() >= 10) &&
          // Photos validation: 
          // - Allow empty array during onboarding/initial profile creation
          // - Require at least 1 photo only if user already has photos (updating existing profile)
          (!('photos' in request.resource.data) || 
           !(request.resource.data.photos is list) || 
           request.resource.data.photos.size() > 0 ||
           // Allow empty photos if existing document has no photos or empty photos (initial creation)
           !('photos' in resource.data) ||
           resource.data.photos.size() == 0)
        )
      );
    }

    // Onboarding progress - users can read/write their own onboarding progress
    match /onboarding/{userId} {
      allow read: if isSelf(userId);
      allow create: if isSelf(userId);
      allow update: if isSelf(userId);
      allow delete: if isSelf(userId);
    }

    // Venues - public read for authenticated users, write restricted (admin only for now)
    match /venues/{venueId} {
      allow read: if isSignedIn();
      allow write: if false; // Only admins later - adjust when admin system is implemented
    }

    // Matches - only participants can read/write
    match /matches/{matchId} {
      // Read: user must be participant (check existing resource or request data)
      allow read: if isSignedIn() && (
        resource.data.userId1 == request.auth.uid ||
        resource.data.userId2 == request.auth.uid ||
        request.resource.data.userId1 == request.auth.uid ||
        request.resource.data.userId2 == request.auth.uid
      );
      
      // Create: user must be one of the participants
      allow create: if isSignedIn() && (
        request.resource.data.userId1 == request.auth.uid ||
        request.resource.data.userId2 == request.auth.uid
      );
      
      // Update: user must be participant
      allow update: if isSignedIn() && (
        resource.data.userId1 == request.auth.uid ||
        resource.data.userId2 == request.auth.uid
      );
      
      // Delete: not allowed (matches are soft-deleted or archived)
      allow delete: if false;
    }

    // Messages - only participants of the match can read/write
    match /messages/{messageId} {
      // Read: user must be participant of the match
      allow read: if isSignedIn() && (
        exists(/databases/$(database)/documents/matches/$(resource.data.matchId)) &&
        (
          get(/databases/$(database)/documents/matches/$(resource.data.matchId)).data.userId1 == request.auth.uid ||
          get(/databases/$(database)/documents/matches/$(resource.data.matchId)).data.userId2 == request.auth.uid
        )
      );
      
      // Create: user must be sender and participant of the match
      allow create: if isSignedIn() &&
        request.resource.data.senderId == request.auth.uid &&
        exists(/databases/$(database)/documents/matches/$(request.resource.data.matchId)) &&
        (
          get(/databases/$(database)/documents/matches/$(request.resource.data.matchId)).data.userId1 == request.auth.uid ||
          get(/databases/$(database)/documents/matches/$(request.resource.data.matchId)).data.userId2 == request.auth.uid
        );
      
      // Update/Delete: not allowed (messages are immutable)
      allow update, delete: if false;
    }

    // Reconnect requests - users can only read/write their own requests
    match /reconnectRequests/{requestId} {
      // Read: user must be either the sender or receiver
      allow read: if isSignedIn() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
      // Create: user must be the sender
      allow create: if isSignedIn() && 
        request.resource.data.fromUserId == request.auth.uid;
      // Update/Delete: not allowed (reconnect requests are immutable)
      allow update, delete: if false;
    }

    // Reports - users can write, only admins can read (read disabled for now)
    match /reports/{reportId} {
      allow write: if isSignedIn();
      allow read: if false; // Private to admins - enable when admin system is implemented
    }

    // Likes collection - document ID is the user's ID, contains array of liked user IDs
    // Structure: /likes/{userId} -> { likes: [targetUserId1, targetUserId2, ...] }
    match /likes/{userId} {
      // User can read their own likes document
      // Also allow reading other users' likes to check for mutual likes
      allow read: if isSignedIn();
      
      // User can only create/update their own likes document
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // Don't allow deletion (likes persist)
      allow delete: if false;
    }

    // Interests collection (if used separately from likes)
    match /interests/{interestId} {
      allow read: if isSignedIn() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
      allow create: if isSignedIn() &&
        request.resource.data.fromUserId == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
