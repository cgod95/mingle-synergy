import React from "react";
import { useNavigate } from "react-router-dom";
import { listChats } from "../lib/chatStore";

export default function ChatIndex() {
  const nav = useNavigate();
  const threads = listChats();

  return (
    <div className="p-4 sm:p-6">
      <h1 className="mb-4 text-lg font-semibold">Chats</h1>
      <div className="grid gap-3">
        {threads.length === 0 ? (
          <div className="rounded-xl border bg-white p-4 text-sm text-neutral-600">
            No chats yet. Like someone to start a conversation.
          </div>
        ) : (
          threads.map((t) => (
            <button
              key={t.id}
              onClick={() => nav(`/chat/${t.id}`)}
              className="rounded-xl border bg-white p-4 text-left transition hover:bg-neutral-50"
            >
              <div className="font-medium">{t.name ?? `Match ${t.id}`}</div>
              <div className="text-sm text-neutral-500">
                {t.messages.at(-1)?.text ?? "Say hi ðŸ‘‹"}
              </div>
            </button>
          ))
        )}
      </div>
    </div>
  );
}
