---
// Header component
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-cream)]/80 backdrop-blur-lg border-b border-black/5">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <div class="w-10 h-10 rounded-xl bg-gradient-primary flex items-center justify-center">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="white"/>
        </svg>
      </div>
      <span class="text-xl font-bold text-[var(--color-dark)]" style="font-family: var(--font-display);">Mingle</span>
    </a>
    
    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center gap-8">
      <a href="#how-it-works" class="text-[var(--color-text-muted)] hover:text-[var(--color-dark)] transition-colors font-medium">How it works</a>
      <a href="#features" class="text-[var(--color-text-muted)] hover:text-[var(--color-dark)] transition-colors font-medium">Features</a>
      <a href="#safety" class="text-[var(--color-text-muted)] hover:text-[var(--color-dark)] transition-colors font-medium">Safety</a>
      <a href="#faq" class="text-[var(--color-text-muted)] hover:text-[var(--color-dark)] transition-colors font-medium">FAQ</a>
    </div>
    
    <!-- CTA -->
    <a href="#waitlist" class="btn-primary !py-3 !px-6 !text-base">
      Join Waitlist
    </a>
  </nav>
</header>
