---
// Features section
const features = [
  {
    title: "24-hour matches",
    description: "Matches expire after 24 hours. No more stale conversations sitting in your inbox for months.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`,
    color: "from-amber-400 to-orange-500"
  },
  {
    title: "Limited messages",
    description: "10 messages each per match. Enough to break the ice, not enough to become pen pals.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
    </svg>`,
    color: "from-blue-400 to-indigo-500"
  },
  {
    title: "Venue-verified",
    description: "You can only see and match with people who are actually at the same venue as you.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
    </svg>`,
    color: "from-emerald-400 to-teal-500"
  },
  {
    title: "Minimal profiles",
    description: "One photo, a short bio. No lengthy questionnaires. You'll learn more in person.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
    </svg>`,
    color: "from-pink-400 to-rose-500"
  },
  {
    title: "No algorithms",
    description: "We don't decide who you see. Everyone at the venue is visible. You decide who you like.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
    </svg>`,
    color: "from-violet-400 to-purple-500"
  },
  {
    title: "Reconnect later",
    description: "Missed your chance? Request a reconnect when you're both at the same venue again.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
    </svg>`,
    color: "from-cyan-400 to-blue-500"
  }
];
---

<section id="features" class="py-24 bg-[var(--color-cream)]">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16 reveal">
      <span class="inline-block px-4 py-2 bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full text-sm font-semibold mb-4">
        Features
      </span>
      <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: var(--font-display);">
        Designed to get you <span class="text-gradient">offline</span>
      </h2>
      <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto">
        Every feature is intentionally designed to encourage real-world connection, not endless app engagement.
      </p>
    </div>
    
    <!-- Features grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature, index) => (
        <div 
          class="reveal group bg-white rounded-3xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          style={`transition-delay: ${index * 0.1}s`}
        >
          <!-- Icon -->
          <div class={`inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br ${feature.color} text-white mb-6 group-hover:scale-110 transition-transform`}>
            <Fragment set:html={feature.icon} />
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-bold mb-3" style="font-family: var(--font-display);">{feature.title}</h3>
          <p class="text-[var(--color-text-muted)] leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
