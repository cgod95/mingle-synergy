---
// Waitlist signup section - Mingle brand style
---

<section id="waitlist" class="py-24 bg-[var(--color-dark-secondary)] relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-[var(--color-primary)]/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-[var(--color-primary)]/5 rounded-full blur-3xl"></div>
  </div>
  
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div class="card-gradient p-8 md:p-16 reveal">
      <div class="text-center">
        <!-- Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-accent)] text-white mb-8 shadow-lg shadow-[var(--color-primary)]/30 animate-pulse-glow">
          <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Join the Closed Beta
        </h2>
        <p class="text-xl text-[var(--color-text-muted)] mb-8 max-w-xl mx-auto">
          Be among the first to experience Mingle. Sign up and we'll notify you when we launch in your city.
        </p>
        
        <!-- Signup form -->
        <form id="waitlist-form" class="max-w-md mx-auto">
          <div class="flex flex-col sm:flex-row gap-3">
            <input 
              type="email" 
              name="email"
              placeholder="Enter your email"
              required
              class="flex-1 px-6 py-4 rounded-xl border border-[var(--color-dark-border)] focus:border-[var(--color-primary)] transition-colors text-white placeholder:text-[var(--color-text-subtle)] bg-[var(--color-dark-card)]"
            />
            <button 
              type="submit"
              class="btn-primary whitespace-nowrap"
            >
              Join Beta
            </button>
          </div>
          
          <!-- Success message (hidden by default) -->
          <div id="success-message" class="hidden mt-6 p-4 bg-emerald-500/20 text-emerald-300 rounded-xl border border-emerald-500/30">
            <p class="font-medium">ðŸŽ‰ You're on the list!</p>
            <p class="text-sm mt-1 text-emerald-300/80">We'll email you when Mingle is ready.</p>
          </div>
          
          <!-- Error message (hidden by default) -->
          <div id="error-message" class="hidden mt-6 p-4 bg-red-500/20 text-red-300 rounded-xl border border-red-500/30">
            <p class="font-medium">Oops! Something went wrong.</p>
            <p class="text-sm mt-1 text-red-300/80">Please try again later.</p>
          </div>
        </form>
        
        <p class="text-sm text-[var(--color-text-subtle)] mt-6">
          No spam, ever. Unsubscribe anytime.
        </p>
        
        <!-- Stats -->
        <div class="flex items-center justify-center gap-8 mt-10 pt-10 border-t border-[var(--color-dark-border)]">
          <div class="text-center">
            <p class="text-3xl font-bold text-white">500+</p>
            <p class="text-sm text-[var(--color-text-muted)]">On the waitlist</p>
          </div>
          <div class="w-px h-12 bg-[var(--color-dark-border)]"></div>
          <div class="text-center">
            <p class="text-3xl font-bold text-white">8</p>
            <p class="text-sm text-[var(--color-text-muted)]">Launch venues</p>
          </div>
          <div class="w-px h-12 bg-[var(--color-dark-border)]"></div>
          <div class="text-center">
            <p class="text-3xl font-bold text-white">Sydney</p>
            <p class="text-sm text-[var(--color-text-muted)]">First city</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('waitlist-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const email = formData.get('email');
    
    // Hide any existing messages
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');
    
    try {
      // Store in localStorage as backup
      const waitlist = JSON.parse(localStorage.getItem('mingle_waitlist') || '[]');
      waitlist.push({ email, timestamp: new Date().toISOString() });
      localStorage.setItem('mingle_waitlist', JSON.stringify(waitlist));
      
      // Show success
      successMessage?.classList.remove('hidden');
      form.reset();
      
    } catch (error) {
      // Show error
      errorMessage?.classList.remove('hidden');
    }
  });
</script>
