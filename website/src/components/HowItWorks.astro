---
// How It Works section
const steps = [
  {
    number: "01",
    title: "Check in",
    description: "Arrive at a participating venue and check in. We verify you're actually there.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
    </svg>`
  },
  {
    number: "02", 
    title: "Match",
    description: "See who else is at the venue. Like someone? If they like you back, it's a match.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
    </svg>`
  },
  {
    number: "03",
    title: "Meet",
    description: "You're both here. Put the phone down and actually meet in person. That's the whole point.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
    </svg>`
  }
];
---

<section id="how-it-works" class="py-24 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16 reveal">
      <span class="inline-block px-4 py-2 bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full text-sm font-semibold mb-4">
        How it works
      </span>
      <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: var(--font-display);">
        Dating, simplified
      </h2>
      <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto">
        No endless swiping. No virtual pen pals. Just real connections at real places.
      </p>
    </div>
    
    <!-- Steps -->
    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      {steps.map((step, index) => (
        <div class="reveal text-center" style={`transition-delay: ${index * 0.15}s`}>
          <!-- Number badge -->
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-primary text-white mb-6 shadow-lg shadow-[var(--color-primary)]/30">
            <Fragment set:html={step.icon} />
          </div>
          
          <!-- Content -->
          <div class="space-y-3">
            <span class="text-[var(--color-primary)] font-bold text-sm tracking-wider">{step.number}</span>
            <h3 class="text-2xl font-bold" style="font-family: var(--font-display);">{step.title}</h3>
            <p class="text-[var(--color-text-muted)] leading-relaxed">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Connector line (desktop only) -->
    <div class="hidden md:block absolute left-1/4 right-1/4 top-1/2 h-0.5 bg-gradient-to-r from-transparent via-[var(--color-primary)]/20 to-transparent -z-10"></div>
  </div>
</section>
