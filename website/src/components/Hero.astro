  <!-- Gradient overlays -->
  <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-dark)] via-transparent to-[var(--color-dark)]"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-[var(--color-dark)] via-transparent to-[var(--color-dark)]"></div>
  <div class="absolute inset-0 bg-[var(--color-dark)]/50"></div>
  
  <!-- Central card -->
  <div class="relative z-10 max-w-lg mx-4">
    <div class="bg-[#111118]/95 backdrop-blur-xl rounded-3xl p-10 md:p-12 text-center shadow-2xl border border-white/5">
      <!-- Logo -->
      <div class="flex justify-center mb-8">
        <div class="logo-icon w-16 h-16 text-2xl animate-pulse-glow">M</div>
      </div>
      
      <!-- Title -->
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-4 tracking-tight animate-fade-in-up">
        Mingle
      </h1>
      
      <!-- Tagline -->
      <p class="text-lg text-[var(--color-text-muted)] mb-10 animate-fade-in-up" style="animation-delay: 0.1s;">
        No more swiping. No more noise. Just meet people.
      </p>
      
      <!-- CTAs -->
      <div class="flex flex-col gap-4 animate-fade-in-up" style="animation-delay: 0.2s;">
        <a href="#waitlist" class="btn-primary w-full py-4">
          Join Closed Beta
        </a>
        <a href="#how-it-works" class="btn-secondary w-full py-4">
          Get Started
        </a>
      </div>
    </div>
    
    <!-- Stats below card -->
    <div class="flex justify-center gap-8 mt-8 animate-fade-in-up" style="animation-delay: 0.3s;">
      <div class="text-center">
        <p class="text-2xl font-bold text-white">500+</p>
        <p class="text-sm text-[var(--color-text-muted)]">Beta signups</p>
      </div>
      <div class="w-px bg-white/20"></div>
      <div class="text-center">
        <p class="text-2xl font-bold text-white">8</p>
        <p class="text-sm text-[var(--color-text-muted)]">Launch venues</p>
      </div>
      <div class="w-px bg-white/20"></div>
      <div class="text-center">
        <p class="text-2xl font-bold text-white">Sydney</p>
        <p class="text-sm text-[var(--color-text-muted)]">First city</p>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-[var(--color-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>
