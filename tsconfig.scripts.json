{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./scripts",
    "rootDir": "./scripts",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"]
} 