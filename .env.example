# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=mingle-a12a2
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=

# Firebase Emulators (for local development)
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_AUTH_HOST=127.0.0.1
VITE_FIREBASE_EMULATOR_AUTH_PORT=9099
VITE_FIRESTORE_EMULATOR_HOST=127.0.0.1
VITE_FIRESTORE_EMULATOR_PORT=8080

# Application Configuration
VITE_ENVIRONMENT=development
VITE_DEMO_MODE=false
VITE_USE_MOCK=false

# Optional: Analytics & Monitoring
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=

# Optional: WebSocket URL (if using real-time features)
VITE_WS_URL=ws://localhost:8080

# Optional: API URL (if using backend API)
VITE_API_URL=http://localhost:3000
